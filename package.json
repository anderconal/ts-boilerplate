{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "TypeScript boilerplate for TDD development.",
  "scripts": {
    "lint": "tsc --noEmit -p . && tslint -p . \"*.ts\"",
    "test": "tsc --noEmit -p . && jest --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metaloha/ts-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "tdd",
    "boilerplate"
  ],
  "author": "Russel Porosky <russel@metaloha.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/metaloha/ts-boilerplate/issues"
  },
  "homepage": "https://github.com/metaloha/ts-boilerplate#readme",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.16",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "dependencies": {},
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
