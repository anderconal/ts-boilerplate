{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch":true,
    "noImplicitAny": true,
    "noImplicitReturns":true,
    "noImplicitThis":true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2017"
  },
  "exclude": [
    "node_modules"
  ]
}
